USEMODULE_INCLUDES_pf_test := $(LAST_MAKEFILEDIR)/include
USEMODULE_INCLUDES += $(USEMODULE_INCLUDES_pf_test)

CFLAGS += -DOBSTACLES_NUMOF=1
CFLAGS += -DTRACEFD_NUMOF=1
CFLAGS += -DCONFIG_SHELL_NO_ECHO
CFLAGS += -DCONFIG_SHELL_NO_PROMPT

ifneq ($(CPU),native)
	CFLAGS += "-DSD_CARD_SPI_MODE=SPI_MODE_3"
	CFLAGS += "-DSDCARD_SPI_PARAM_SPI=SPI_DEV(0)"
	CFLAGS += "-DSDCARD_SPI_PARAM_CS=GPIO_PIN(PORT_A, 8)"
	CFLAGS += "-DSDCARD_SPI_PARAM_CLK=GPIO_PIN(PORT_B, 3)"
	CFLAGS += "-DSDCARD_SPI_PARAM_MOSI=GPIO_PIN(PORT_B, 5)"
	CFLAGS += "-DSDCARD_SPI_PARAM_MISO=GPIO_PIN(PORT_B, 4)"
endif
